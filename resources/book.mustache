{{>header}}

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span4 offset2">
      <dl>
        {{#isbn}}
        <dt>ISBN</dt>
        <dd>{{isbn}}</dd>
        {{/isbn}}

        {{#title}}
        <dt>Title</dt>
        <dd>{{title}}</dd>
        {{/title}}

        {{#author}}
        <dt>Author</dt>
        <dd>{{author}}</dd>
        {{/author}}

        {{#publisher}}
        <dt>Publisher</dt>
        <dd>{{publisher}}</dd>
        {{/publisher}}
      </dl>
    </div>
    <div class="span4">
      <p>
        {{#image}}
          {{#imageLink}}
            <a href="{{imageLink}}"
              ><img src="{{image}}"
              alt="{{title}}"
              title="Image {{#imageSource}}from {{imageSource}}{{/imageSource}} {{#title}}for {{title}}{{/title}}"/></a>
          {{/imageLink}}
          {{^imageLink}}
          <img src="{{image}}"
          alt="{{title}}"
          title="Image {{#imageSource}}from {{imageSource}}{{/imageSource}} for {{#title}}{{title}}{{/title}}"/>
          {{/imageLink}}
        {{/image}}
      </p>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span4 offset2">
      <h3>Prices</h3>
      <table class="table table-bordered table-hover">
        {{#priceFlipkart}}
          <tr>
            <th>Flipkart</th>
            <td>{{priceFlipkart}}</td>
          </tr>
        {{/priceFlipkart}}
      </table>
    </div>
  </div>
</div>

{{>footer}}
